---
interface Props {
	text: string;
	size: 'small' | 'medium' | 'large';
	alignment: 'center' | 'left';
}

const { text, size, alignment } = Astro.props as Props;
let style = 'font-size: 0.5rem;line-height: 1.3;'; // medium
if (size === 'small') {
	style = 'font-size: 1.15rem;line-height: 1.25;';
}
if (size === 'large') {
	style = 'font-size: 2rem;line-height: 1.3;';
}

style = style + `text-align: ${alignment};`;
---

<p style={style}>{text}</p>
<style>
	p {
		max-width: 57rem;
		text-align: center;
		color: hsl(0, 0%, 28%);
	}
</style>
