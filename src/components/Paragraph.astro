---
interface Props {
	text: string;
	size: 'small' | 'medium' | 'large';
	alignment: 'center' | 'left';
	color?: string;
	fontWeight?: number;
}

const { text, size, alignment, color, fontWeight } = Astro.props as Props;

let style = 'font-size: 1.8rem;line-height: 1.3;';
if (size === 'small') {
	style = 'font-size: 1.3rem;line-height: 1.25;';
}
if (size === 'large') {
	style = 'font-size: 3rem;line-height: 1.3;';
}
if (color) {
	style = style + `color: ${color};`;
}
if (fontWeight) {
	style = style + `font-weight: ${fontWeight};`;
}
style = style + `text-align:${alignment};`;
---

<p style={style}>{text}</p>
