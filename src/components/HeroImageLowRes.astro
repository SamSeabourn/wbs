---
interface Props {
	lowRes: string;
}

const { lowRes } = Astro.props as Props;
---

<div class="image-bg" style={{ backgroundImage: `url(${lowRes})` }}></div>

<style>
	.image-bg {
		display: block;
		width: 100%;
		height: 100%;
		filter: blur(10px);
		transform: scale(1.02);
		top: 0;
		left: 0;
		background-size: cover;
		background-position: right 35% bottom 45%;
		position: absolute;
	}
</style>
