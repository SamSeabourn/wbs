---
interface Props {
	heroText: string;
}

const { heroText } = Astro.props as Props;
---

<div>
	<h1>{heroText}</h1>
</div>

<style>
	div {
		align-content: center;
		display: flex;
		flex-wrap: wrap;
		z-index: 10;
		height: 100%;
		width: 100%;
		justify-content: center;
		position: absolute;
	}

	h1 {
		color: #fff;
		font-size: 6rem;
		filter: drop-shadow(1px 3px 20px rgba(0, 0, 0, 0.75));
		letter-spacing: 0.15rem;
		font-family: 'Merriweather', serif;
		font-optical-sizing: auto;
		font-weight: 800;
		font-style: oblique;
		font-variation-settings: 'wdth' 100;
	}
</style>
