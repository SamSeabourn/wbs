---
import type { CSSProperty } from 'astro/types';
import { cssObjectToString } from '../helpers/css-object-to-string';

interface Props {
	color?: 'none' | 'black' | 'theme';
	styleOverrides?: Partial<Record<string, CSSProperty>>;
}

const { color, styleOverrides } = Astro.props;

let style = '';

if (color === 'theme') {
	style = 'background-color:var(--primary-color);';
}
if (color === 'black') {
	style = 'background-color:#000;';
}
if (styleOverrides) {
	style = style + cssObjectToString(styleOverrides);
}
---

<section style={style} class="mt-8 mb-10">
	<slot />
</section>

<style>
	section {
		display: flex;
		justify-content: center;
		padding-top: calc(var(--spacing-size));
		padding-bottom: calc(var(--spacing-size));
		flex-direction: column;
		align-items: center;
	}
</style>
