---
import HeroImageHighRes from './HeroImageHighRes.astro';
import HeroImageLowRes from './HeroImageLowRes.astro';

interface Props {
	lowRes: string;
	highRes: string;
}

const { lowRes, highRes } = Astro.props;
---

<section>
	<HeroImageLowRes lowRes={lowRes} />
	<HeroImageHighRes highRes={highRes} />
</section>
<style>
	section {
		overflow: hidden;
		display: block;
		width: 100%;
		height: 24rem;
		position: relative;
	}

	@media (max-width: 640px) {
		section {
			height: 40rem;
		}
	}
</style>
