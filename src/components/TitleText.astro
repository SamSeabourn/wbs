---
export interface Props {
	text: string;
	wordsToBold: string[];
}

const { text, wordsToBold } = Astro.props as Props;
---

<h2>
	{
		text.split(' ').map((word) => {
			if (wordsToBold?.includes(word)) {
				return <span style="font-weight: 800;">{word + ' '}</span>;
			}
			return <span>{word + ' '}</span>;
		})
	}
</h2>

<style>
	h2 {
		font-size: 4.5rem;
		font-weight: 500;
		letter-spacing: -0.03rem;
		margin-bottom: calc(var(--spacing-size) / 2);
	}
</style>
