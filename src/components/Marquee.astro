<div>
	<div class="marquee">
		<div class="marquee-item">
			<img loading="lazy" src="logos/npws-logo.svg" alt="Bird Logo" />
			<img loading="lazy" src="logos/dpe-logo.svg" alt="Government Logo" />
			<img loading="lazy" src="logos/nswpf-logo.svg" alt="Police Logo" />
		</div>
		<div class="marquee-item" aria-hidden>
			<img loading="lazy" src="logos/npws-logo.svg" alt="Bird Logo" />
			<img loading="lazy" src="logos/dpe-logo.svg" alt="Government Logo" />
			<img loading="lazy" src="logos/nswpf-logo.svg" alt="Police Logo" />
		</div>
	</div>
	<div class="gradient-overlay"></div>
</div>

<style>
	.gradient-overlay {
		pointer-events: none;
		width: 46rem;
		height: 20rem;
		position: absolute;
		transform: translateY(-20rem);
		background: linear-gradient(
			to right,
			black 0%,
			rgba(0, 0, 0, 0) 20%,
			rgba(0, 0, 0, 0) 80%,
			black 100%
		);
	}

	.marquee {
		border: 2px solid red;
		display: flex;
		overflow: hidden;
		white-space: nowrap;
		width: 45rem;
	}
	.marquee-item {
		color: #fff;
		animation-duration: 20s;
		animation-iteration-count: infinite;
		animation-name: marquee-content;
		animation-timing-function: linear;
		padding: 5px 15px 5px 15px;
	}

	img {
		width: 20rem;
		height: 20rem;
	}

	.marquee:hover .marquee-item {
		animation-play-state: paused;
	}

	@keyframes marquee-content {
		from {
			transform: translateX(0%);
		}
		to {
			transform: translateX(-100%);
		}
	}
</style>
